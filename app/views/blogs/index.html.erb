
<div class="container">
  <div class="article_title">
    <h1><%= pluralize(@blogs.size, "Article")%></h1>
  </div>
  
    <% @blogs.each do |blog|%>
        
      <% if session[:user_id] == blog.user_account_id%>
         <div class="article_container">
        <div class="article_title"><%= current_user.name %>
        <h1><%= blog.title%></h1> 
            created <%= time_ago_in_words(blog.created_at) %> ago
        </div>
        <div class="article_body">
        <%= blog.body%>
            created <%= time_ago_in_words(blog.created_at) %> ago
        </div>
        </div>
      <%else%>
        <div class="article_container">
            <div class="article_title">
            <h1><%= blog.title%></h1><span><%#= current_user.name %></span>
                created <%= time_ago_in_words(blog.created_at) %> ago
            </div>
            <div class="article_body">
            <%= blog.body%>
                created <%= time_ago_in_words(blog.created_at) %> ago
            </div>
            </div>
      <%end%>
    <% end%>
 </ul>

</div>